#format-volume-background = ${colors.background-alt}

bar-volume-width = 5
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-fill = ─
bar-volume-empty = ─

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 98

format-full = <ramp-capacity> <label-full>
