[module/notifications]
type = custom/script
format = <label>
format-foreground = ${colors.foreground-alt}
format-background = ${colors.background-alt}
format-padding = 2
label = %output%
exec = if [ $(dunstctl is-paused) = true ]; then echo ""; else echo ""; fi
